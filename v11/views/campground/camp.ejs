<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div id="map">
            </div>
        </div>
        <div class="col-md-9">
            <div class="card mb-5 col-12 px-0">
                <img class="card-img-top" style="width: 100%;" src="<%=camp.image%>" alt="Card image cap">
                <div class="card-body">
                    <div class="d-flex flex-row justify-content-between">
                        <h5 class="card-title"><%=camp.name%></h5>
                        <h5 class="card-title">$<%=camp.price%>/night</h5>
                    </div>
                    <p class="card-text">Created by: <%=camp.creator.username%></p>
                    <p class="card-text"><%=camp.description%></p>
                    <%if(user && camp.creator.id.equals(id)){%>
                    <a class="btn btn-sm btn-outline-dark" href="/campground/<%=camp._id%>/update">Edit</a>
                    <form class="d-inline" action="/campground/<%=camp._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-outline-dark" href="/campground">Delete</button>
                    </form>
                    <%}%>
                    
                </div>
            </div>
            <div class="card card-body bg-light">
                <a href="/campground/<%=camp._id%>/comment/new" class="btn btn-outline-dark btn-block mb-5">Leave a
                    review</a>
                    <%camp.comments.forEach(function(cmnts){%>
                    <div class="d-flex flex-row justify-content-between">
                        <span><%=cmnts.author.username%></span>
                        <span class="pull-right">10 days ago</span>
                    </div>
                    <p><%=cmnts.comment%></p>
                    <%if(user && cmnts.author.id.equals(id)){%>
                    <form class="d-inline" action="/campground/<%=camp._id%>/comment/<%=cmnts.id%>?_method=DELETE"
                        method="POST">
                        <a href="/campground/<%=camp._id%>/comment/<%=cmnts.id%>/edit"
                            class="btn btn-sm btn-dark align-self-start">Edit</a>
                        <button class="btn btn-sm btn-dark display-inline"
                            href="/campground/<%=camp.id%>">Delete</button>
                    </form>
                    <%}%>
                    <%})%>
                </div>
            </div>
        </div>
    </div>
    <script>
        function initMap() {
            var lat = <%= camp.lat %>;
            var lng = <%= camp.lng %>;
            var center = { lat: lat, lng: lng };
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 8,
                center: center,
                scrollwheel: false
            });
            var contentString = `
            <strong><%= camp.name %><br />
            <%= camp.location %></strong>
            <p><%= camp.description %></p>
          `
            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });
            var marker = new google.maps.Marker({
                position: center,
                map: map
            });
            marker.addListener('click', function () {
                infowindow.open(map, marker);
            });
        }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCa1dhQPNUNomZnpAlPDaBlNwLxvZMMmaE&callback=initMap"></script>
    <%- include('../partials/footer') %>