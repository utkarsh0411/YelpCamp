<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            MAP
        </div>
        <div class="col-md-9">
            <div class="card mb-5 col-12 px-0">
                <img class="card-img-top" style="width: 100%;" src="<%=camp.image%>" alt="Card image cap">
                <div class="card-body">
                    <div class="d-flex flex-row justify-content-between">
                        <h5 class="card-title"><%=camp.name%></h5>
                        <h5 class="card-title">Rate</h5>
                    </div>
                    <p class="card-text">Created by: <%=camp.creator.username%></p>
                    <p class="card-text"><%=camp.description%></p>
                </div>
            </div>
            <div class="card card-body bg-light">
                <a href="/campground/<%=camp._id%>/comment/new" class="btn btn-primary align-self-end mb-2">Leave a
                    review</a>
                <%camp.comments.forEach(function(cmnts){%>
                <div class="d-flex flex-row justify-content-between">
                    <span><%=cmnts.author.username%></span>
                    <span class="pull-right">10 days ago</span>
                </div>
                    <p><%=cmnts.comment%></p>
                <%})%>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>