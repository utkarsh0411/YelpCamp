<%- include('../partials/header') %>
<div class="container w-50 d-flex flex-column align-items-center text-center">
    <p class="display-4 mb-5">Update Campground</p>
    <form class="w-50 mb-0" action="/campground/<%=campground._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" value="<%=campground.name%>" name="name">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" value="<%=campground.image%>" name="img">
        </div>
        <div class="form-group">
            <textarea class="form-control rounded-1" name="description" rows="10"><%=campground.description%></textarea>
        </div>
        <div class="form-group">
            <input type="submit" class="form-control btn btn-danger">
        </div>
        <a href="/campground" class="align-self-end">Go Back</a>
    </form>
</div>
<%- include('../partials/footer') %>