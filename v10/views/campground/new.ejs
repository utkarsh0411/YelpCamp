<%- include('../partials/header') %>
<div class="container w-50 d-flex flex-column align-items-center text-center">
    <p class="display-4 mb-5">Create a Campground</p>
    <form class="w-50 mb-0" action="/campground" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Name" name="name">
        </div>
        <div class="form-group">
            <input type="number" class="form-control" placeholder="Price" name="price" min="0.01" step="0.01">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Image" name="img">
        </div>
        <div class="form-group">
            <textarea class="form-control rounded-1" name="description" placeholder="Description" rows="10"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" class="form-control btn btn-danger">
        </div>
        <a href="/campground" class="align-self-end">Go Back</a>
    </form>
</div>
<%- include('../partials/footer') %>